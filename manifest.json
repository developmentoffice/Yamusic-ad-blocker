{
    "name": "Yandex music ad blocker",
    "author": "Alex Novikov",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/16.png"
        },
        "default_title": "Click to start blocking ad"
    },
    "manifest_version": 3,
    "version": "1.0",
    "description": "Hide ad popup, turn off sound if ad is playing",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    }
}
